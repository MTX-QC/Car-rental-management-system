    <!--VIP用户修改车辆信息-->
    <update id="editVehicle" >
        update book
        <trim prefix="set" suffixOverrides=",">
            <if test="name != null" >
                book_name = #{name},
            </if>
            <if test="isbn != null" >
                book_isbn = #{isbn},
            </if>
            <if test="press != null" >
                book_press = #{press},
            </if>
            <if test="author != null" >
                book_author = #{author},
            </if>
            <if test="pagination != null" >
                book_pagination = #{pagination},
            </if>
            <if test="price != null" >
                book_price = #{price},
            </if>
            <if test="uploadTime != null" >
                book_uploadtime = #{uploadTime},
            </if>
            <if test="status != null" >
                book_status = #{status},
            </if>
            <if test="borrower!= null" >
                book_borrower= #{borrower },
            </if>
            <if test="borrowTime != null" >
                book_borrowtime = #{borrowTime},
            </if>
            <if test="returnTime != null" >
                book_returntime = #{returnTime}
            </if>
        </trim>
        where book_id = #{id}
    </update>
